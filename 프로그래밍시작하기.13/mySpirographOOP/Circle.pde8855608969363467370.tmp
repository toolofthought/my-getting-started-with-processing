class Circle {
  PVector location;
  float r;
  float theta;
  
  Circle(int x, int y, float r, float theta) {
    location = new PVector(x, y);
    this.r = r;
    this.theta = theta;
  }
  
  Circle(int x, int y) {
    this(x, y, random(30, 40), 0);
  }
  
  Circle(PVector location) {
    this.location = location.copy();
  }
  
  void update(float angularVelocity) {
    theta += angularVelocity;
  }
  
  void display() {
    pushMatrix();
      translate(location.x, location.y);
      rotate(theta);
      stroke(#F08040);
      strokeWeight(2);
      ellipseMode(RADIUS);
      ellipse(0, 0, r, r);
      line(0, 0, r, 0);
    popMatrix();
  }
}